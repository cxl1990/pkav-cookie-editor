{
	"name": "pkav cookie editor",
	"version": "1.0.1",
	"manifest_version": 2,
	"description": "pkav cookie editor by xiangcao",
	"icons": {
		"48": "logo_avatar.png"
	},
	"browser_action": {
	  "default_icon": "icon.png",
	  "default_popup": "popup.html"
	},
	"content_scripts": [
	{
	  "matches": ["http://*/*", "https://*/*"],
	  "run_at": "document_idle"
	}
	],
	"permissions": [
		"tabs",
		"cookies",
		"notifications",
		"idle",
		"http://*/",
		"https://*/"
	]
}